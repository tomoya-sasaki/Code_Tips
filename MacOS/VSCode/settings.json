{
    "workbench.editor.showIcons": false,
    "window.autoDetectColorScheme": true,
    "files.trimTrailingWhitespace": true,
    "git.decorations.enabled": false,
    "workbench.preferredLightColorTheme": "Default Dark+",
    "workbench.preferredHighContrastColorTheme": "Brackets Light Pro",
    "workbench.editorAssociations": [
        {
            "viewType": "jupyter.notebook.ipynb",
            "filenamePattern": "*.ipynb"
        }
    ],
    //
    // Terminal
    //
    "terminal.integrated.fontSize": 13.5,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.commandsToSkipShell": [
        "language-julia.interrupt"
    ],
    //
    // UI badges
    //
    "scm.countBadge": "off",
    "git.countBadge": "off",
    //
    // Update
    "update.mode": "manual",
    "update.showReleaseNotes": true,
    "extensions.autoCheckUpdates": true,
    "extensions.autoUpdate": false,
    //
    // Sidebar
    //
    "files.exclude": {
        "**/*.pdf": true,
        "**/*.html": true,
        "**/*.log": true,
        "**/*.rds": true,
        "**/.vscode": true,
        "**/.Rhistory": true,
        // R //
        "**/**_cache": true,
        "**/**_files": true,
        // Tex //
        "**/*.aux": true,
        "**/*.dvi": true,
        "**/*.fdb_latexmk": true,
        "**/*.fbs": true,
        "**/*.fls": true,
        "**/*.nav": true,
        "**/*.out": true,
        "**/*.snm": true,
        "**/*.toc": true,
        "**/*.synctex.gz": true,
        // ipynb //
        ".ipynb_checkpoints": true
    },
    //
    // Jupyter
    //
    "jupyter.askForKernelRestart": false,
    "jupyter.alwaysTrustNotebooks": true,
    "jupyter.enableKeyboardShortcuts": false,
    //
    // Vim
    //
    "vim.vimrc.path": "/Users/shusei/.vimrc",
    "vim.hlsearch": true,
    "vim.whichwrap": "h,l,<,>,[,]",
    "vim.startofline": false,
    "vim.normalModeKeyBindings": [
        {
            "before": ["g", "d"],
            "commands": [
                {
                    "command": "editor.action.goToReferences"
                }
            ]
        }
    ],
    // "vim.visualModeKeyBindings": [
    //     {
    //         "before": ["z", "g"],
    //         "commands": [
    //             {
    //                 "command": "spellright.addFromSelectionToUserDictionary"
    //             }
    //         ]
    //     }
    // ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "g", "f"
            ],
            "after": [
                "g", "h"
            ]
        },
        {
            "before": [
                ";"
            ],
            "after": [
                ":"
            ]
        },
        {
            "before": [
                ":"
            ],
            "after": [
                ";"
            ]
        },
        {
            "before": [
                "*"
            ],
            "after": [
                "#", "N"
            ]
        },
        {
            "before": [
                "#"
            ],
            "after": [
                "*", "N"
            ]
        }
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": [
                ";"
            ],
            "after": [
                ":"
            ]
        },
        {
            "before": [
                ":"
            ],
            "after": [
                ";"
            ]
        }
     ],
     "vim.insertModeKeyBindingsNonRecursive": [
         // Note that 'when' is not working now
        {
            "before": ["'"],
            "after": ["\""],
            "when": "editorTextFocus && editorLangId != 'tex'"
        },
        {
            "before": ["\""],
            "after": ["'"],
            "when": "editorTextFocus && editorLangId != 'tex'"
        },
        {
            "before": ["-"],
            "after": ["_"],
            "when": "editorTextFocus && editorLangId != 'tex'"
        },
        {
            "before": ["_"],
            "after": ["-"],
            "when": "editorTextFocus && editorLangId != 'tex'"
        }
    ],
    "vim.useCtrlKeys": true,
    "vim.easymotionDimBackground": false,
    "typescript.preferences.quoteStyle": "double",
    //
    // R
    //
    "r.rmarkdown.enableCodeLens": false,
    "r.lsp.debug": true,
    "r.lsp.diagnostics": true,
    "r.helpPanel.enableHoverLinks": true,
    "r.rpath.mac": "/Library/Frameworks/R.framework/Versions/4.0/Resources/bin/R",
    "r.rterm.mac": "/usr/local/var/pyenv/versions/3.8.5/envs/py38/bin/radian",
    "r.rterm.option": [
        "--no-save",
        "--no-restore",
        "--r-binary=/Library/Frameworks/R.framework/Versions/4.0/Resources/bin/R"
    ],
    "r.bracketedPaste": true,
    "[r]": {
        "editor.parameterHints.enabled": false,
        "editor.colorDecorators":false
    },
    "[rmd]": {
        "editor.parameterHints.enabled": false,
        "editor.colorDecorators":false
    },
    //
    // LaTex
    //
    "latex-workshop.bibtex-fields.sort.enabled": true,
    "latex-workshop.latex.autoClean.run": "never",
    "latex-workshop.latex.autoBuild.run": "never",
    "latex-workshop.chktex.enabled": false,
    // Intellisense
    "latex-workshop.intellisense.package.enabled": false,
    "latex-workshop.intellisense.includegraphics.preview.enabled": false,
    // Warnings (https://github.com/James-Yu/LaTeX-Workshop/wiki/Compile#settings-details)
    "latex-workshop.message.log.show": false,
    "latex-workshop.message.warning.show": false,
    "latex-workshop.message.badbox.show": false,
    "latex-workshop.message.latexlog.exclude": ["anchor"],
    // Compile
    "latex-workshop.latex.clean.fileTypes": [
        "*.aux",
        "*.bbl",
        "*.blg",
        "*.idx",
        "*.ind",
        "*.lof",
        "*.lot",
        "*.out",
        "*.toc",
        "*.acn",
        "*.acr",
        "*.alg",
        "*.glg",
        "*.glo",
        "*.gls",
        "*.ist",
        "*.fls",
        "*.log",
        "*.fdb_latexmk",
        "*.snm",
        "*.nav",
        "*.dvi",
        "*.synctex.gz"
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "latexmk",
            "tools": [
              "latexmk"
            ]
        },
        {
            "name": "pdflatex",
            "tools": [
              "pdflatex"
            ]
        }
    ],
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdfdvi",
                "-outdir=%OUTDIR%",
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "pdflatex",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "-outdir=%OUTDIR%",
                "%DOC%"
            ],
            "env": {}
        }
    ],
    // Viewer
    "latex-workshop.view.pdf.viewer": "external",
    "latex-workshop.view.pdf.external.viewer.command": "/Applications/Skim.app/Contents/SharedSupport/displayline",
    "latex-workshop.view.pdf.external.viewer.args": [ "0", "%PDF%" ],
    "latex-workshop.view.pdf.external.synctex.command": "/Applications/Skim.app/Contents/SharedSupport/displayline",
    "latex-workshop.view.pdf.external.synctex.args": [ "-r", "%LINE%", "%PDF%", "%TEX%" ],
    //
    // Spell check (Spell Right)
    //
    "spellright.documentTypes": ["latex"],
    "spellright.ignoreRegExpsByClass": {
        "markdown": [ "/&amp;/g", "/&nbsp;/g" ],
        "cpp": [ "/#include\\s+\\\".+\\\"/g" ],
        "html": [ "/<script>[^]*?</script>/gm" ],
        "latex": ["/\\\\begin{figure}[^]*?\\\\end{figure}/gm",
                  "/\\\\begin{align}[^]*?\\\\end{align}/gm",
                  "/\\\\begin{align*}[^]*?\\\\end{align*}/gm"]
    },
    "spellright.notificationClass": "error",
    //
    // Editor
    //
    // Controls if quick suggestions should show up while typing
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": true,
    },
    "editor.snippetSuggestions": "inline",
    // Errors and Warnings
    "problems.decorations.enabled": false,
    "outline.problems.badges": false,
    "problems.autoReveal": false,
    // Controls if suggestions should automatically show up when typing trigger characters
    "editor.suggestOnTriggerCharacters": false,
    "editor.minimap.enabled": false,
    "editor.fontSize": 13.5,
    "editor.occurrencesHighlight": false,
    "breadcrumbs.enabled": false,
    "keyboard.touchbar.enabled": false,
    "editor.cursorStyle": "line",
    "editor.lineNumbers": "on",
    "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
    "editor.wordWrap": "on",
    "editor.insertSpaces": true,
    "editor.tabSize": 2
}
